            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DatabaseTest"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".InsertUserAccessActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".InsertEmployeeActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".BtnDepartmentActivity"/>
        <activity android:name=".BtnEmployeeActivity"/>
        <activity android:name=".BtnUserAccessActivity"/>
        <activity android:name=".UpdateUserAccessRecord"/>
        <activity android:name=".UpdateEmployeeRecord"/>
        <activity android:name=".GoUpdateUserAccess"/>
